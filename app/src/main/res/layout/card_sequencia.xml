<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_sequencia_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_sequencia_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aposta: xxx"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/texto_normal" />

            <LinearLayout
                android:id="@+id/card_sequencia_numeros1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/n1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n1"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande" />

                <TextView
                    android:id="@+id/n2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n2"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande" />

                <TextView
                    android:id="@+id/n3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n3"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande" />

                <TextView
                    android:id="@+id/n4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n4"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande" />

                <TextView
                    android:id="@+id/n5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n5"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_sequencia_numeros2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/n6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n6"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande" />

                <TextView
                    android:id="@+id/n7"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n7"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/n8"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n8"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/n9"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n9"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/n10"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n10"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_sequencia_numeros3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/n11"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n11"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/n12"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n12"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/n13"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n13"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/n14"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n14"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/n15"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulo_numero"
                    android:gravity="center"
                    android:text="n15"
                    android:textColor="@color/texto_cor"
                    android:textSize="@dimen/texto_grande"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_sequencia_valor"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Valor : R$ XX,XX"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="@dimen/texto_normal" />

                <ImageView
                    android:id="@+id/card_sequencia_deletar_icon"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

                <ImageView
                    android:id="@+id/card_sequencia_editar"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    app:srcCompat="@android:drawable/ic_menu_edit"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
